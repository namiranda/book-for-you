<%- include('partials/header'); %>
    <div class=" bg-white sm:bg-transparent	">

        <main id="main" class="sm:bg-white sm:m-6 md:mx-10 lg:mx-14 p-6 rounded-xl  ">
            <h1 class="font-lora font-bold text-3xl text-red-400">
                <%= user.username %>'s List </h1>

            <% user.books.forEach(book => { %>
                <div class="flex bg-gray-200 my-3">
                    <div class="w-16 m-4 md:w-24">
                        <img src="<%= book.thumbnail %>" alt="<%= book.title %> book cover">
                    </div>
                    <div class="flex flex-col md:flex-row">
                        <div class="m-4">
                            <h2 class="font-lora font-bold">
                                <%= book.title %>
                            </h2>
                            <h2 class="inline text-gray-600">By
                                <% if (book.authors) { %>
                                    <% book.authors.forEach(author => { %>
                                        <div class="text-gray-600 inline">
                                            <%= author %>
                                        </div>
                                        <% }) %>
                                            <% } %>

                            </h2>
                            <h2 class="text-gray-600">
                                <%= book.publisher %> -
                                    <%= book.publishedDate %>
                            </h2>
                        </div>
                        <div>
                            <a href=""><img class="inline sm:hidden my-4 w-auto sm:w-40 text-center font-roboto font-bold rounded-full py-2 px-6 text-black bg-yellow-400" src="https://img.icons8.com/android/24/000000/info.png" /></a>
                            <a href="<%= book.infoLink %> "><img class="inline sm:hidden my-4 w-auto sm:w-40 text-center font-roboto font-bold rounded-full py-2 px-6 text-black bg-yellow-400" src="https://img.icons8.com/windows/32/000000/delete-forever.png" /></a>

                            <a class="hidden sm:inline my-4 w-auto sm:w-40 text-center font-roboto font-bold rounded-full py-2 px-6 text-black bg-yellow-400" href="<%= book.infoLink %> ">+ info</a>
                            <a class="hidden sm:inline my-4 w-auto sm:w-40 text-center font-roboto font-bold rounded-full py-2 px-6 text-black bg-yellow-400" href="#">Delete</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </main>

    </div>
    <%- include('partials/footer'); %>