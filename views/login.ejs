<%- include('partials/header'); %>

    <main id="main" class="grid bg-transparent h-5/6 ">
        <div class="mx-4 place-self-center bg-white p-6 space-y-6 flex flex-col justify-center rounded-xl sm:h-auto sm:w-2/5 md:w-1/2 lg:w-1/3">
            <h2 class="font-lora text-3xl text-red-400 text-center">Login</h2>
            <p class="font-roboto text-center">Sign into your account</p>
            <form action="/login" method="POST">

                <div class="relative mb-4 flex rounded-md border border-yellow-600">
                    <label for="username" class="absolute -top-2.5 left-3 text-xs text-yellow-600 bg-white">Username</label>
                    <input id="username" type="text" class="p-3 block w-full rounded-md sm:text-sm " name="username" placeholder="username" />
                </div>
                <div class="relative my-4 flex rounded-md border border-yellow-600">
                    <label for="password" class="absolute -top-2.5 left-3 text-xs text-yellow-600 bg-white">Password</label>
                    <input id="password" type="password" class="p-3  block w-full rounded-md sm:text-sm " name="password" placeholder="password" />
                </div>

                <button class=" my-2 w-full sm:w-40 text-center font-roboto rounded-full py-1 px-6 text-black bg-yellow-400">
                 Login
              </button>
                <p class="pt-3 font-roboto text-sm">Don't have an account? <a class="text-yellow-600" href="/register">Register here</a> </p>
            </form>
        </div>
    </main>

    <%- include('partials/footer'); %>