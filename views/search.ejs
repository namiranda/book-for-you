<%- include('partials/header'); %>
    <main id="main" class="grid bg-white sm:bg-transparent	max-h-screen">
        <div class="place-self-center sm:bg-white p-6 space-y-6 flex flex-col justify-center h-screen sm:rounded-xl sm:h-auto sm:w-4/5 md:w-3/5 lg:w-1/2">
            <p class="text-gray-600 text-center text-lg md:text-xl sm:p-3">Enter a subject you like and the site will provide book recommendations and suggestions for what to read next.</p>

            <div class="">
                <form action="/results" method="GET">

                    <div class="relative my-4 flex rounded-md shadow-xl border border-gray-100">
                        <label for="subject" class="absolute -top-2.5 left-3 text-xs text-gray-300  bg-white">Subject</label>
                        <input id="subject" type="text" class="p-3 focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" name="search" placeholder="I.e. cats, japan, ...">
                        <span class="inline-flex"><button aria-label="search" class="inline p-3 border-indigo-500">
                            <svg width="20" height="20" fill="currentColor" class=" text-red-500">
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" />
                              </svg></button></span>
                    </div>

                </form>
            </div>
            <img class="max-h-1/2 object-contain " src="/img/search_engine.png" alt="">
        </div>


    </main>

    <%- include('partials/footer'); %>